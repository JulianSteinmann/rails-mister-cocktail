<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
    <li class="list-group-item" >
        <%= link_to cocktail do %>
          <%= cocktail.name %>
        <% end %>
        <%= link_to edit_cocktail_path(cocktail) do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to cocktail, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
